{
    "manifest_version": 3,
    "name": "Carreira Kenzie Forms",
    "description": "Auto completador de campos repetidos nos formul√°rios de empregabilidade da Kenzie.",
    "version": "1.0",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "background.service_worker": {
        "scripts": ["scripts/main.js"],
        "persistent": false
    },
    "action": {
        "default_popup": "popup/main.html"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
}